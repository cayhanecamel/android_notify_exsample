<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity$PlaceholderFragment"
              android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/showNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show notification"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="↓↓notification options↓↓"
                android:textColor="@color/txt_black01"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ticker"
                android:textColor="@color/txt_black01"/>

            <EditText
                android:id="@+id/ticker"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ticker"
                android:textColor="@color/txt_black01"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContentTitle"
                android:textColor="@color/txt_black01"/>

            <EditText
                android:id="@+id/contentTitle"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContentTitle"
                android:textColor="@color/txt_black01"/>


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContentText"
                android:textColor="@color/txt_black01"/>

            <EditText
                android:id="@+id/contentText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ContentText"
                android:textColor="@color/txt_black01"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BigContentTitle"
                android:textColor="@color/txt_black01"/>

            <EditText
                android:id="@+id/bigContentTitle"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BigContentTitle"
                android:textColor="@color/txt_black01"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SummaryText"
                android:textColor="@color/txt_black01"/>

            <EditText
                android:id="@+id/summaryText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SummaryText"
                android:textColor="@color/txt_black01"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BigPicture"
                android:id="@+id/bigPicture"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="wearableBackgroundImage"
                android:id="@+id/wearableBackgroundImage"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
